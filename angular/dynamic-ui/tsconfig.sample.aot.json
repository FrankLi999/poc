{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "paths": {
      "@bpw-ui/*": [
        "dist/@bpw-ui/*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
	  "src/**/*.e2e-spec.ts",
    "test.ts",
    "e2e/**/*.ts",
    "test/**/*.ts",
    "packages"
  ],
  "angularCompilerOptions": {
    "genDir": "sample/aot",
    "skipMetadataEmit": true
  }
}