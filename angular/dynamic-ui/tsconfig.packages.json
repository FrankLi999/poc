{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "paths": {
      "@bpw-ui/*": [
        "dist/@bpw-ui/*"
      ]
    },
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node",
      "q"
    ]
  },
  "exclude": [
    "sample",
    "node_modules",
    "packages",
	"e2e"
  ]
}